{
    "manifest_version": 3,
    "name": "WebSentinel",
    "version": "13.0",
    "description": "Advanced web security testing tool: HTTP/HTTPS interception, request modification, JWT attacks, fuzzing, AI analysis, and more. For authorized security testing only.",
    "permissions": [
        "declarativeNetRequest",
        "debugger",
        "sidePanel",
        "storage",
        "declarativeNetRequestWithHostAccess",
        "clipboardWrite",
        "unlimitedStorage",
        "webRequest",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.obf.js"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "modules/core/*.obf.js",
                "modules/features/*.obf.js",
                "modules/ui/*.obf.js",
                "modules/services/*.obf.js",
                "sound/*.mp3"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "devtools_page": "devtools.html",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "regras_basicas",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'; style-src 'self' 'unsafe-inline'; style-src-elem 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; connect-src 'self' https://generativelanguage.googleapis.com https://* http://*;"
    }
}